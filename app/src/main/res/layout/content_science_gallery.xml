<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_science_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7daca"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.maheshuk31.killerrobotapplication.ScienceGalleryActivity"
    tools:showIn="@layout/activity_science_gallery">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linLayScienceGalleryImageHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageScienceGalleryHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/science_gallery_headerpng" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linLayScienceGalleryText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linLayScienceGalleryImageHeader"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtScienceGalleryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Originally located in Dublin, Ireland this unique experience involves combining art with science to provide a unique interactive experience to people where everything is brought to life-size for maximum fun and learning.
Now in Autumn 2018, at London Bridge at Guy's Campus, we King's College will open available to be visited for free. And this exhibition wouldn't have happened without the Science Gallery's help and contribution"
                android:textColor="#192e8c"
                android:textSize="18dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayScienceGalleryConcept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linLayScienceGalleryText"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageScienceGalleryConcept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/science_gallery_concept" />

            <TextView
                android:id="@+id/txtScienceGalleryConcept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concept of the Science Gallery at Guy's Campus, at London Bridge"
                android:textColor="#580101"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayScienceGalleryMoreInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linLayScienceGalleryConcept"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtScienceGalleryMoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0058b1"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>

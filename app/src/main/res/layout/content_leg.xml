<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_leg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7daca"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.maheshuk31.killerrobotapplication.LegActivity"
    tools:showIn="@layout/activity_leg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/antenna_crop"
        android:id="@+id/imgLeg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linLayLegContent"
        android:layout_below="@+id/imgLeg">

        <TextView
            android:text="X-Band Transponder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLegTitle"
            android:textColor="#af2121"
            android:textSize="40dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"/>

        <TextView
            android:text="test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLegText"
            android:textSize="18dp"
            android:textColor="#192e8c"/>
    </LinearLayout>

</RelativeLayout>
